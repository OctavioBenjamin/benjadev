---
import Image from "astro/components/Image.astro"

import linkedInLogo from "../icon/LinkedIn.svg"
import githubLogo from "../icon/Github-Light.svg"
---

<div class="container">
    <a class="hover:animate-pulse-fade-in" href="ttps://github.com/OctavioBenjamin"><Image src={linkedInLogo} width={50} height={50} alt="LinkedIn Logotype"/></a>
    <a class="hover: animate-pulse-fade-in" href="https://www.linkedin.com/in/octavio-benjamin-mendez-4b5633195/"><Image src={githubLogo} width={50} height={50} alt="GitHub Logotype"/></a>

---
import { Image } from "astro:assets";
import profilePic from "../img/profilePicture.jpg";

import gitHub from "../icon/Github-Light.svg";
import linkedIn from "../icon/LinkedIn.svg"
---

<section class="container-fluid">
    <div class="presentation-container">
        <div class="image-container">
            <Image
                src={profilePic}
                alt="Foto de perfil de Octavio Benjamin Mendez."
                width={100}
                height={100}
            />
        </div>
        <div class="text-container">
            <p class="regular-text">🧑🏻‍💻Octavio Benjamin Mendez</p>
            <h1 class="bold-text title-presentation">Web Developer</h1>
            <p class="regular-text">
                📍From Argentina.<br />📖Engineering Student.
            </p>
        </div>
    </div>
    <div class="links-container container-fluid">
        <a class="regular-text"href=""
            ><Image
                src={gitHub}
                alt="Logo de GitHub"
                width={20}
                height={20}
            />GitHub</a
        >
        <a class="regular-text" href=""><Image
            src={linkedIn}
            alt="Logo de LinkedIn"
            width={20}
            height={20}
        />LinkedIn</a>
    </div>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
    }

    img {
        border-radius: 50%;
    }

    .presentation-container {
        width: 300px;
        display: flex;
    }

    .text-container * {
        width: 180px;
        margin: 0;
        padding: 0;
    }

    .text-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 20px;
    }

    /* Botones */

    .links-container a {
        text-decoration: none;
        background-color: #1282A2;
        color: white;
        padding: 10px ;
        border-radius: 50px;
        margin: 10px;
        width: 95px;

        display: flex;
        align-items: center;
        justify-content: center;
    }

    .links-container img {
        margin-right: 7px;
    }

    .links-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

</header>

<style>
    header {
        
        color: white;

        display: flex;
        align-items: center;
        height: 50px;
        margin-top: 20px;

    }

    .header-title {
        font-size: 24px;
        font-weight: bold;
    }

    .menu-icon {
        
        position: absolute;
        right: 10px;
    }

    .navbar-links {
        position: absolute;
        top: 80px;
        left: 0;
        background-color: rgb(0, 30, 82,0.7);
        height: 100vh;

        display: none;

        
    }

    .navbar-links li {
        list-style: none;
        text-align: center;
        margin: 20px 0px;
    }

    .navbar-links li a{
        color: white;
        text-decoration: none;
        
    }

    /* Animacion del navbarlink */
    #navbar-links {
        display: none;
        animation: fadeInOut 0.6s ease;
    }
    
    @keyframes fadeInOut {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }


    @media screen and (min-width: 768px){

        #navbar-links{
            position:sticky;
            display: flex;
            height: 100%;
            top: 0;
            left: 50px;
            background: none;
            justify-content: space-evenly;
            align-items: center;
            margin: 0;

        }

        #navbar-links li {
            width: fit-content;

        }

        .menu-icon {
            display: none;
        }

        #navbar-links li:hover{
            position: relative;
            transform: scale(1.2);
            background-color:  rgb(9,9,121);
            padding: 5px 15px 5px 15px;
            transition: ease 0.5s;
            border-radius: 10px;
        }


    }
</style>

<script>

    const navbarMenu = document.getElementById("menu-icon")
    const navbarLinks = document.getElementById("navbar-links")
    const links = document.getElementsByClassName(".link") 

    navbarMenu.addEventListener("click", () => {
        if (navbarLinks.style.display === "none"){
            navbarLinks.style.display = "block"
            
        } else {
            navbarLinks.style.display = "none"
        }
    })

    


</script>
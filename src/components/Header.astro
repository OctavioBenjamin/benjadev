<header class="container">
    
    <h1 class="header-title">BenjaDEV</h1>
    <span id="menu-icon" class="menu-icon material-symbols-outlined">
        menu
        </span>
    <ul id="navbar-links" class="container navbar-links">
        <li class="col-md-12">
            <a class="link" id="link" href="#home">Home</a>
        </li>
        <li>
            <a class="link" id="link" href="#aboutme">About me</a>
        </li>
        <li class="col-md-12">
            <a class="link" id="link" href="#projects">Projects</a>
        </li>
        <li class="col-md-12">
            <a class="link" id="link" href="#skills">Skills</a>
        </li>
        <li class="col-md-12">
            <a class="link" id="link" href="#contact">Contact</a>
        </li>
    </ul>
    
</header>

<style>
    header {
        color: white;
        position: fixed;
        top: 0;
        display: flex;
        align-items: center;
        height: 50px;
        /* background-color: rgb(0, 0, 0, 0.8); */
        backdrop-filter: blur(5px);
        padding: 5px 0px 5px 50px;
    }

    .header-title {
        font-size: 24px;
        font-weight: bold;
    }

    .menu-icon {
        
        position: absolute;
        right: 10px;
    }

    .navbar-links {
        position: absolute;
        top: 50px;
        right: 0;
        background-color: #03003f;
        height: 100vh;

        display: none;
    }

    .navbar-links li {
        list-style: none;
        text-align: center;
        margin: 20px 0px;
        box-shadow: 3px;
    }

    .navbar-links li a{
        color: white;
        text-decoration: none;
        
    }

    /* Animacion del navbarlink */
    #navbar-links {
        display: none;
        animation: fadeInOut 0.6s ease;
    }
    
    @keyframes fadeInOut {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }


    @media screen and (min-width: 768px){

        #navbar-links{
            position:sticky;
            display: flex;
            height: 100%;
            top: 0;
            left: 50px;
            background: none;
            justify-content: space-evenly;
            align-items: center;
            margin: 0;

        }

        #navbar-links li {
            width: fit-content;

        }

        .menu-icon {
            display: none;
        }

        #navbar-links li:hover{
            position: relative;
            transform: scale(1.2);
            background-color:  rgb(9,9,121);
            padding: 5px 15px 5px 15px;
            transition: ease 0.5s;
            border-radius: 10px;
        }


    }
</style>

<script>

    const navbarMenu = document.getElementById("menu-icon")
    const navbarLinks = document.getElementById("navbar-links")
    const links = document.getElementsByClassName("link") 
    const ancho = window.innerWidth;

    if (ancho < 768){
        navbarLinks.style.display = "none"
    }


    navbarMenu.addEventListener("click", () => {
        if (navbarLinks.style.display === "none"){
            navbarLinks.style.display = "block"
            
        } else {
            navbarLinks.style.display = "none"
        }
    })

    for (let i = 0; i < links.length; i++) {
        links[i].addEventListener("click", () => {
            if (navbarLinks.style.display === "block") {
                navbarLinks.style.display = "none";
            } else {

            }
        });
    }

    


</script>